------------------------------------------------------------------------

CREATE TABLE locations(
    ID SERIAL PRIMARY KEY,
    colN DECIMAL(7,3),  
    colW DECIMAL(7,3),  
    machineName TEXT,
    coinName TEXT
    coinOne TEXT,
    coinTwo TEXT,
    coinThree TEXT,
    userID TEXT
);

-- DROP PROCEDURE insert_coin(long DECIMAL(7,6), lat DECIMAL(7,6), mname TEXT, coin TEXT);

CREATE OR REPLACE FUNCTION insert_coin(long DECIMAL(7,3), lat DECIMAL(7,3), mname TEXT, coin TEXT) RETURNS void AS
    $$
    BEGIN
        INSERT INTO locations (colN, colW, machineName, coinName) VALUES (long, lat, mname, coin);
        ALTAR TABLE collections ADD one TEXT;
    END;
$$ LANGUAGE PLPGSQL;

